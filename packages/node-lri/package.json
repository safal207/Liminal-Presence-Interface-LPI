{
  "name": "node-lri",
  "version": "0.2.0",
  "description": "Node.js SDK for Liminal Resonance Interface (LRI)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "pretest": "npm run test:integration",
    "test": "npm run test:jest && npm run test:node",
    "test:integration": "jest --runInBand --config jest.integration.config.js",
    "test:jest": "jest",
    "test:node": "node --test --require ts-node/register tests/ws-adapter.test.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern 'src/__tests__/**'",
    "lint:fix": "eslint 'src/**/*.ts' --ignore-pattern 'src/__tests__/**' --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "lri",
    "semantic",
    "context",
    "ai",
    "layer8"
  ],
  "author": "LRI Contributors",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.14.0",
    "@grpc/proto-loader": "^0.8.0",
    "ajv": "^8.12.0",
    "ajv-draft-04": "^1.0.0",
    "ajv-formats": "^2.1.1",
    "ajv-formats-draft2019": "^1.6.1",
    "canonicalize": "^2.0.0",
    "cbor": "^10.0.11",
    "jose": "^5.2.0",
    "tweetnacl": "^1.0.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
